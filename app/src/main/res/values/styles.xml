<resources>

    <!-- Тема без меню -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/backgraund_splash</item>
    </style>

    <style name="AppActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>

        <item name="android:listViewStyle">@style/ListViewL</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/darkBack</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="android:listViewStyle">@style/ListViewL</item>
    </style>

    <style name="TimeTableHeaderButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Стили для светлой темы -->
    <style name="ListViewL" parent="Widget.AppCompat.ListView">
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@color/white</item>
    </style>

    <!-- Стили для темной темы  -->
    <style name="ListViewD" parent="Widget.AppCompat.ListView">
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@color/white</item>
    </style>

    <style name="LinearLayoutD" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/darkLinearBack</item>
    </style>
</resources>
