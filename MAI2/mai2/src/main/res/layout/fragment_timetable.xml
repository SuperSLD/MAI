<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="8dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                android:orientation="vertical"
        >
            <com.raspisanie.mai.ui.view.ToolbarBigView
                    android:id="@+id/vToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvGroupTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="@dimen/paddingMid"
                    android:layout_marginRight="@dimen/paddingMid"
                    android:textColor="@color/colorTextSecondary"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/timetable_group"/>
            <TextView
                    android:id="@+id/tvGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/paddingMid"
                    android:layout_marginRight="@dimen/paddingMid"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="24sp"
                    android:text="@string/timetable_group"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/paddingMid"
                    android:layout_marginRight="@dimen/paddingMid"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorBorder"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/vgMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/vgContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWeekHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/paddingMid"
                android:paddingRight="@dimen/paddingMin"
                android:clipToPadding="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/paddingMid"
                android:layout_marginRight="@dimen/paddingMid"
                android:layout_marginTop="@dimen/paddingMin"
                android:background="@color/colorBorder"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/vgEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="280dp"
                android:layout_height="280dp"
                app:srcCompat="@drawable/ic_box"/>
            <TextView
                android:layout_marginTop="@dimen/paddingMid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/paddingMax"
                android:paddingLeft="@dimen/paddingMax"
                android:text="@string/timetable_empty"
                android:gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/textNormal"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/vgSelectGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:padding="24dp"
        >
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/colorBackgroundDark">
                <ImageView
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        app:srcCompat="@drawable/ic_today_gradient"
                        android:layout_gravity="center"
                />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorTextSecondary"
                    android:text= "@string/timetable_select_group"
                    android:textSize="16sp"
                    android:layout_marginBottom="31dp"
                    android:layout_marginEnd="46dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="29dp"
                    android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSelectGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="75dp"
                    android:layout_marginStart="75dp"
                    style="@style/ButtonEmpty"
                    android:text="@string/exams_select_group_btn"/>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/layout_loading"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>