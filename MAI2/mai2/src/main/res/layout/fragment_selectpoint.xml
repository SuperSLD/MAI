<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <online.jutter.roadmapview.RMMapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
        />

        <online.jutter.roadmapview.RMMarkerView
                android:id="@+id/markerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />

        <FrameLayout
                android:id="@+id/menuContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clipToPadding="false"
        >

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/houseAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/colorBackgroundSecondary"
            >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                >
                    <TextView
                            android:id="@+id/tvSymbol"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            tools:text="Ð”"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_orange_eclipse_48"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginEnd="16dp"
                    />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                    >

                        <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="4dp"
                        />

                        <TextView
                                android:id="@+id/tvDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="16sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginEnd="12dp"
                        />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:cardBackgroundColor="@color/colorBackground"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
            >

                <LinearLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                >

                    <ImageView
                            android:id="@+id/icBack"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_del"
                            android:layout_marginBottom="4dp"
                    />

                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnDone"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            style="@style/ButtonSolid"
                            android:textColor="@color/colorTextWhite"
                            android:text="@string/select_point_done"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

    </FrameLayout>
</LinearLayout>