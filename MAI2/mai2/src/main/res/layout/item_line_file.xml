<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_grey_border"
        app:strokeColor="@color/colorAccent"
        android:orientation="horizontal"
        android:padding="16dp"
>
    <TextView
            android:id="@+id/tvCount"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top"
            android:textColor="@color/colorAccent"
            android:textSize="11sp"
            android:text="1"
            android:gravity="center"
            android:background="@drawable/shape_blue_eclipse_48"
            android:fontFamily="@font/roboto_regular"
    />
    <ImageView
            android:id="@+id/icFileDone"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_file_done"
            android:layout_gravity="top"
    />
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
    >
        <TextView
                android:id="@+id/tvFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:lineHeight="18sp"

                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorTextPrimary"
                android:drawablePadding="16dp"
                tools:targetApi="p"/>
        <TextView
                android:id="@+id/tvRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_file_mandatory"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:lineHeight="18sp"
                android:visibility="gone"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorPrimary"
                android:drawablePadding="16dp"
                tools:targetApi="p"/>
    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_gravity="center_vertical"
            app:tint="@color/colorBorder"/>
    <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:visibility="gone"
    />
</LinearLayout>
