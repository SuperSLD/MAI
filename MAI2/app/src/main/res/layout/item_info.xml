<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/paddingMin">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorBackgroundSecondary"
        app:strokeColor="@color/colorBorder"
        app:strokeWidth="1dp"
        app:cardCornerRadius="@dimen/radiusNormal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/paddingMid">
            <ImageView
                android:id="@+id/icIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:tint="@color/colorPrimarySecondary"
                app:srcCompat="@drawable/ic_map"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto_bold"
                android:paddingLeft="@dimen/paddingMid"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/textNormal"
                android:text="@string/info_button_map"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>