<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>

        <item name="android:listViewStyle">@style/ListViewL</item>
    </style>

    <style name="AppActionBar.TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>